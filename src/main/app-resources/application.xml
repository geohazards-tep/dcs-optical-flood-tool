<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="application">
  <jobTemplates>
    <jobTemplate id="download">
      <streamingExecutable>/application/node_download/run.py</streamingExecutable>
	 <defaultParameters>
      </defaultParameters>
	<defaultJobconf>
	<property id="ciop.job.max.tasks">10</property>
        <property id="mapred.task.timeout">9900000000</property>
	</defaultJobconf>	
    </jobTemplate>
    <jobTemplate id="flood_extraction">
      <streamingExecutable>/application/node_flood_extraction/run.py</streamingExecutable>
         <defaultParameters>
      </defaultParameters>
        <defaultJobconf>
        <property id="ciop.job.max.tasks">10</property>
        <property id="mapred.task.timeout">9900000000</property>
        </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
    <workflow id="optical-flood-extraction" title="optical flood extraction" abstract="this workflow will download the selected data from the interface and  perform the flood extraction from Optical data">
    <workflowVersion>1.0</workflowVersion>
    <node id="node_download">       
      <job id="download"></job>
      <sources>
        <source refid="string:list" id="input" title="sar images" abstract="optical images to be downloaded" scope="runtime"></source>
      </sources>
    </node>
    <node id="node_flood_extraction">
      <job id="flood_extraction"></job>
      <sources>
        <source  refid="wf:node">node_download</source>
      </sources>
    </node>
  </workflow>
</application>
